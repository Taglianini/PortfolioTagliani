---
import Header from '../components/Header.astro';
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">

    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
	   <Header />
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>

	@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@400&family=Syne:wght@400..800&display=swap');

    root {
        color-scheme: light dark;
    }

    html {
        font-family: Syne , Syne;
    }

    body {
        background: linear-gradient(to left, #252850, #18171c);
        display: flex-align;
        justify-content: center;
    }
</style>
