---
import HTML from "../icons/HTML.astro"
import CSS from "../icons/CSS.astro"
import Tailwind from "../icons/Tailwind.astro"
import JS from "../icons/JS.astro"
import AstroIcon from "../icons/AstroIcon.astro"
import Figma from "../icons/Figma.astro"
import Wordpress from "../icons/Wordpress.astro"
import Notion from "../icons/Notion.astro"
---
<style>
    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
        
    }
    .animate-scroll {
        animation: scroll 11s linear infinite;
        display: flex;
        width: 200%; /* El doble del ancho para hacer que se mueva sin saltos */
    }
</style>
<body class="">
    <h3 class="text-3xl opacity-90 mt-4 mb-2">Mis skills:</h3>
<div class="overflow-hidden -mt-20">
     <div class="flex animate-scroll space-x-7">
          <CSS/>
          <HTML/>
          <Tailwind/>
          <JS/>
          <AstroIcon/>
          <Figma/>
          <Wordpress/>
          <Notion/>
