---
import HTML from "../icons/HTML.astro"
import CSS from "../icons/CSS.astro"
import Tailwind from "../icons/Tailwind.astro"
import JS from "../icons/JS.astro"
import AstroIcon from "../icons/AstroIcon.astro"
import Figma from "../icons/Figma.astro"
import Wordpress from "../icons/Wordpress.astro"
import Node from "../icons/Node.astro"
import Notion from "../icons/Notion.astro"
---
<style>
    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
        
    }
    .animate-scroll {
        animation: scroll 10s linear infinite; /* Ajusta el tiempo seg√∫n necesites */
        display: flex;
        width: 200%; /* El doble del ancho para hacer que se mueva sin saltos */
    }
    
</style>
<body class="">
<div class="overflow-hidden w-full">
     <div class="flex animate-scroll space-x-5">
          <CSS/>
          <HTML/>
          <Tailwind/>
          <JS/>
          <AstroIcon/>
          <Figma/>
          <Wordpress/>
          <Node/>
          <Notion/>
